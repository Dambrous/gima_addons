<odoo>

    <record id="view_macro_certification_form" model="ir.ui.view">
        <field name="name">macro.certification.tree</field>
        <field name="model">gima.macro.certification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_macro_certification_tree" model="ir.ui.view">
        <field name="name">macro.certification.form</field>
        <field name="model">gima.macro.certification</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="action_view_certification_course" model="ir.actions.act_window">
        <field name="name">Macro Certifications</field>
        <field name="res_model">gima.macro.certification</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="gima_macro_certification_menu_config"
          name="View All Macro Certifications"
          parent="gima_partner.gima_certifications_menu_config"
          action="action_view_certification_course"
          sequence="10"/>

</odoo>
