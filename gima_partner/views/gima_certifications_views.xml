<odoo>

    <record id="view_certifications_tree" model="ir.ui.view">
        <field name="name">certificazioni.tree</field>
        <field name="model">gima.certifications</field>
        <field name="arch" type="xml">
            <tree string="Certifications" multi_edit="1">
                <field name="partner_id"/>
                <field name="type_certification_id"/>
                <field name="certificate_number"/>
                <field name="date_of_issue"/>
                <field name="expiration_date"/>
                <field name="state"/>
                <field name="attachment_ids" widget="many2many_binary"/>
            </tree>
        </field>
    </record>

    <record id="view_certifications_form" model="ir.ui.view">
        <field name="name">certificazioni.form</field>
        <field name="model">gima.certifications</field>
        <field name="arch" type="xml">
            <form string="Certifications">
                <sheet>
                    <group>
                        <field name="partner_id"/>
                        <field name="type_certification_id"/>
                        <field name="certificate_number"/>
                        <field name="attachment_ids" widget="many2many_binary"/>
                        <field name="state"/>
                        <field name="date_of_issue"/>
                        <field name="maintenance_date"/>
                        <field name="expiration_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <template id="portal_view_certifications">
        <t t-set="title">
            <t t-esc="page_name"/>
        </t>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Courses</t>
            </t>
            <div t-if="not grouped_certifications" class="alert alert-warning" role="alert">
                No results were found for your search.
            </div>
            <t t-if="grouped_certifications" t-call="portal.portal_table">
                <thead>
                    <tr class="active">

                        <th class="text-left">NÂ°</th>
                        <th class="text-center">Company employee</th>
                        <th class="text-center">Type</th>
                        <th class="text-center d-none d-md-table-cell">Start date</th>
                        <th class="text-center d-none d-md-table-cell">End date</th>
                        <th class="text-center">State</th>
                        <th class="text-center d-none d-md-table-cell">Download Certificate</th>
                    </tr>
                </thead>
                <t t-foreach="grouped_certifications" t-as="certification">
                    <tr>
                        <td class="text-left text-wrap text-break">
                            <span t-field="certification.certificate_number"/>
                        </td>
                        <td class="text-left text-wrap text-break">
                            <span t-field="certification.partner_id.name"/>
                        </td>
                        <td class="text-left text-wrap text-break">
                            <span t-field="certification.type_certification_id"/>
                        </td>
                        <td class="text-center d-none d-md-table-cell">
                            <span t-field="certification.date_of_issue" t-options="{'widget': 'date'}"/>
                        </td>
                        <td class="text-center d-none d-md-table-cell">
                            <span t-field="certification.expiration_date" t-options="{'widget': 'date'}"/>
                        </td>
                        <td class="text-center ">
                            <t t-if="certification.state == 'valid'" name="state_valid">
                                <span class="badge rounded-pill text-bg-success">
                                    <i class="fa fa-fw fa-check" aria-label="Valid" title="Valid" role="img"/>
                                    <span class="d-none d-md-inline">Valid</span>
                                </span>
                            </t>
                            <t t-elif="certification.state == 'expiring'" name="state_expiring">
                                <span class="badge rounded-pill text-bg-warning">
                                    <i class="fa fa-fw fa-clock-o" aria-label="Expiring" title="Expiring" role="img"/>
                                    <span class="d-none d-md-inline">Expiring</span>
                                </span>
                            </t>
                            <t t-elif="certification.state == 'waiting'" name="state_waiting">
                                <span class="badge rounded-pill text-bg-info">
                                    <i class="fa fa-fw fa-clock-o" aria-label="Waiting" title="Waiting" role="img"/>
                                    <span class="d-none d-md-inline">Waiting</span>
                                </span>
                            </t>
                            <t t-elif="certification.state == 'expired'" name="state_expired">
                                <span class="badge rounded-pill text-bg-danger">
                                    <i class="fa fa-fw fa-times" aria-label="Expired" title="Expired" role="img"/>
                                    <span class="d-none d-md-inline">Expired</span>
                                </span>
                            </t>
                        </td>
                        <td class="text-center d-none d-md-table-cell">
                            <t t-if="certification.attachment_ids">
                                <a t-attf-href="/download/attachment/{{ certification.attachment_ids.ids }}">
                                    <i class="fa fa-download" aria-hidden="true"/>
                                </a>
                            </t>
                            <t t-else="">
                                No certificates found
                            </t>
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <record id="view_certifications_search" model="ir.ui.view">
        <field name="name">gima.certifications.search</field>
        <field name="model">gima.certifications</field>
        <field name="arch" type="xml">
            <search string="Certifications Search">
                <group expand="0" name="group_by" string="Group By">
                    <filter string="Group by Type" name="group_by_type" domain="[]"
                            context="{'group_by': 'type_certification_id'}"/>
                    <filter string="Group by Partner" name="group_by_partner" domain="[]"
                            context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_view_all_certifications" model="ir.actions.act_window">
        <field name="name">Certifications</field>
        <field name="res_model">gima.certifications</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_certifications_search"/>
        <field name="context">{'search_default_group_by_type': 1, 'search_default_group_by_partner_id': 1}</field>
    </record>

    <menuitem id="gima_certifications_menu_config"
              name="Gima Certifications"
              parent="contacts.menu_contacts"
              sequence="4"/>

    <menuitem id="gima_certifications_menu_config_2"
              name="Gima Certifications"
              parent="gima_partner.gima_certifications_menu_config"
              action="action_view_all_certifications"
              sequence="5"/>

    <template id="portal_layout_certifications" name="Portal Layout">
        <t t-call="portal.frontend_layout">
            <t t-set="is_portal" t-value="True"/>

            <div id="wrap" class='o_portal_wrap'>
                <div class="container pt-3">
                    <div class="wrapper col-12 d-flex flex-wrap justify-content-between align-items-center">
                        <h3 class="my-3">Certification Management |
                            <t t-esc="user_id.name"/>
                        </h3>
                    </div>
                    <t t-out="0"/>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_my_certifications" name="Gestione Certificazioni">
        <t t-call="gima_partner.portal_layout_certifications">
            <div class="row g-2 mb-5">
                <t t-if="user_id.is_certified_fgas">
                    <div class="col-md-6">
                        <div class="o_portal_category row g-2 mt-3">
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="icon" t-value="'/gima_partner/static/src/img/f_gas_certification_small.png'"/>
                                <t t-set="title">F-GAS Portal</t>
                                <t t-set="text">View the report of the fgas certifications of your company and your
                                    employees
                                </t>
                                <t t-set="url" t-value="'/my/company_certification/fgas'"/>
                                <t t-set="config_card" t-value="True"/>
                                <t t-set="course_type" t-value="'work_safety'"/>
                            </t>
                        </div>
                    </div>
                </t>
                <t t-if="user_id.is_certified_iso_9001">
                    <div class="col-md-6">
                        <div class="o_portal_category row g-2 mt-3">
                            <t t-call="portal.portal_docs_entry">
                                <t t-set="icon"
                                   t-value="'/gima_partner/static/src/img/iso_icon.svg'"/>
                                <t t-set="title">ISO 9001 Portal</t>
                                <t t-set="text">View your company's ISO 9001 certification report</t>
                                <t t-set="url" t-value="'/my/company_certification/iso_9001'"/>
                                <t t-set="config_card" t-value="True"/>
                                <t t-set="course_type" t-value="'equipment_safety'"/>
                            </t>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

