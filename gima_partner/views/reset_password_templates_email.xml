<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="reset_password_email" inherit_id="auth_signup.reset_password_email">
        <xpath expr="//td[@t-if='not object.company_id.uses_default_logo']/img" position="attributes">
            <attribute name="style">padding: 0px; margin: 0px; height: auto; width: 210px;</attribute>
        </xpath>
        <!--        HIDE POWERED BY ODOO IN THE MAIL FOOTER-->
        <xpath expr="//table[@style='min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;']"
               position="replace">
        </xpath>
    </template>

     <template id="alert_login_new_device" inherit_id="auth_signup.alert_login_new_device">
         <!--        HIDE POWERED BY ODOO IN THE MAIL FOOTER-->
        <xpath expr="//table[@style='min-width: 590px; background-color: #F1F1F1; color: #454748; padding: 8px; border-collapse:separate;']"
               position="replace">
        </xpath>
    </template>

</odoo>
