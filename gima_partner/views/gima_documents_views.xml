<odoo>

    <template id="portal_layout_documents" name="Portal Layout">
        <t t-call="portal.frontend_layout">
            <t t-set="is_portal" t-value="True"/>

            <div id="wrap" class='o_portal_wrap'>
                <div class="container pt-3">
                    <div class="wrapper col-12 d-flex flex-wrap justify-content-between align-items-center">
                        <h3 class="my-3">Document Management |
                            <t t-esc="user_id.name"/>
                        </h3>
                    </div>
                    <t t-out="0"/>
                </div>
            </div>
        </t>
    </template>


    <template id="portal_my_documents" name="Gestione Documenti">
        <t t-call="gima_partner.portal_layout_documents">
            <div class="row g-2 mb-5">
                <div class="col-12">
                    <div class="o_portal_category row g-2 mt-3">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon" t-value="'/gima_partner/static/src/img/pos_icon.svg'"/>
                            <t t-set="title">POS</t>
                            <t t-set="text">View the Operational Security Plan of your company and your employees</t>
                            <t t-set="url" t-value="'/my/company_document/pos'"/>
                            <t t-set="config_card" t-value="True"/>
                            <t t-set="course_type" t-value="'work_safety'"/>
                        </t>
                    </div>
                </div>
                <div class="col-12">
                    <div class="o_portal_category row g-2 mt-3">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon"
                               t-value="'/gima_partner/static/src/img/dvr_icon.svg'"/>
                            <t t-set="title">DVR</t>
                            <t t-set="text">View your company's Risk Assessment Document</t>
                            <t t-set="url" t-value="'/my/company_document/dvr'"/>
                            <t t-set="config_card" t-value="True"/>
                            <t t-set="course_type" t-value="'equipment_safety'"/>
                        </t>
                    </div>
                </div>
                <div class="col-12">
                    <div class="o_portal_category row g-2 mt-3">
                        <t t-call="portal.portal_docs_entry">
                            <t t-set="icon"
                               t-value="'/gima_partner/static/src/img/medical_visit_icon.svg'"/>
                            <t t-set="title">MEDICAL VISITS</t>
                            <t t-set="text">View the company medical visit report</t>
                            <t t-set="url" t-value="'/my/company_document/medical_visits'"/>
                            <t t-set="config_card" t-value="True"/>
                            <t t-set="course_type" t-value="'equipment_safety'"/>
                        </t>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <template id="portal_view_documents">
        <t t-set="title">
            <t t-esc="page_name"/>
        </t>
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Documents</t>
            </t>
            <div t-if="not documents" class="alert alert-warning" role="alert">
                No results were found for your search.
            </div>
        </t>
    </template>

</odoo>
